@model InterviewIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<!-- 🔥 CSO sees Reserved Rooms / Others see Your Interviews -->
@if (User.IsInRole("CSO"))
{
    <h1>Your Reserved Rooms:</h1>
}
else
{
    <h1>Your Interviews:</h1>
}

@if (User.IsInRole("Recruiter") || User.IsInRole("CSO"))
{
    <table class="table">
        <thead>
            <tr>
                <th>Position</th>
                <th>Company</th>
                <th>Interviewer</th>
                <th>Student</th>
                <th>@Html.DisplayNameFor(model => model.UserInterviews.First().Room)</th>
                <th>@Html.DisplayNameFor(model => model.UserInterviews.First().DateTime)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserInterviews)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Position.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Position.Company.Name)</td>
                    <td>@item.Interviewer.FirstName @item.Interviewer.LastName</td>
                    <td>@(item.Student != null ? item.Student.FirstName + " " + item.Student.LastName : "*Empty*")</td>
                    <td>@Html.DisplayFor(modelItem => item.Room)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                    <td>
                        @if (User.IsInRole("Recruiter") || User.IsInRole("CSO"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.InterviewId">Edit</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.InterviewId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- 🔥 Different headers for All Interviews -->
@if (User.IsInRole("Recruiter"))
{
    <h1>All Company Interviews:</h1>
}
@if (User.IsInRole("CSO"))
{
    <h1>All Interviews:</h1>
}

<table class="table">
    <thead>
        <tr>
            <th>Position</th>
            <th>Company</th>
            <th>Interviewer</th>
            <th>Student</th>
            <th>@Html.DisplayNameFor(model => model.AllInterviews.First().Room)</th>
            <th>@Html.DisplayNameFor(model => model.AllInterviews.First().DateTime)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllInterviews)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Position.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Position.Company.Name)</td>
                <td>@item.Interviewer.FirstName @item.Interviewer.LastName</td>
                <td>@(item.Student != null ? item.Student.FirstName + " " + item.Student.LastName : "*Empty*")</td>
                <td>@Html.DisplayFor(modelItem => item.Room)</td>
                <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                <td>
                    @if (User.IsInRole("Recruiter") || User.IsInRole("CSO"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.InterviewId">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.InterviewId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
