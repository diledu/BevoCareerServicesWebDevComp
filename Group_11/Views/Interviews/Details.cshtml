@model Group_11.Models.Interview

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Interview</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Position
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Title)
        </dd>
        <dt class="col-sm-2">
            Company
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Interviewer)
        </dt>
        <dd class="col-sm-10">
            @Model.Interviewer.FirstName @Model.Interviewer.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @(Model.Student != null ? Model.Student.FirstName + " " + Model.Student.LastName : "*Empty*")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Room)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("CSO") || User.IsInRole("Recruiter"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.InterviewId">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
