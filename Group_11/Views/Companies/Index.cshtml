@model IEnumerable<Group_11.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>Find Companies!</h1>

@if(User.IsInRole("CSO"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<!--Search Functionality-->
<form asp-action="Index" asp-controller="Companies" method="post">
    <!-- Name search field -->
    <div class="form-group">
        <label for="SearchString" class="me-2">Name:</label>
        <input name="SearchString" class="form-control" />
    </div>

    <!-- Industry Search List -->
    <div class="form-group">
        <label for="Industries" class="me-2">Industries:</label>
        @Html.ListBox("Industries", (MultiSelectList)ViewBag.Industries, new { @class = "form-control" })
    </div>

    <br />
    <!-- Search buttons-->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-danger">Show All</a>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Industries)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.Industries != null && item.Industries.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var industry in item.Industries)
                            {
                                <li>@industry.IndustryName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No industries listed.</span>
                    }
                </td>
                <td>
                    @if(User.IsInRole("CSO"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.CompanyId">Edit</a>
                    }
                <a asp-action="Details" asp-route-id="@item.CompanyId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
