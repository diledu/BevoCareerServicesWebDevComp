@model Group_11.Models.Company

@{
    ViewData["Title"] = "Details";
}

<h1>@Model?.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!--Display Industries-->
        <dt class="col-sm-2">
            Industries
        </dt>
        <dd class="col-sm-10">
            @if (Model.Industries != null && Model.Industries.Any())
            {
                <ul class="list-unstyled mb-0">
                    @foreach (var industry in Model.Industries)
                    {
                        <li>@industry.IndustryName</li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">No industries listed.</span>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Recruiter") || User.IsInRole("CSO"))
    {
        @if(ViewBag.isRecruiter != null && ViewBag.isRecruiter)
        {
            <a asp-action="Edit" asp-route-id="@Model?.CompanyId">Edit</a>
        }
    }

    @if(User.IsInRole("CSO"))
    {

            <a asp-action="Index">Back to List</a>
    }
</div>
